@model SOSRequestPortal.Models.Request

@{
    ViewData["Title"] = "Criar Requisição";
}

<h2>Criar</h2>

<h4>Requisição</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ticket" class="control-label"></label>
                <input asp-for="Ticket" class="form-control" />
                <span asp-validation-for="Ticket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item" class="control-label"></label>
                <input asp-for="Item" class="form-control" />
                <span asp-validation-for="Item" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDeImagem" class="control-label"></label>
                <input asp-for="TipoDeImagem" class="form-control" />
                <span asp-validation-for="TipoDeImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioDaRetirada" class="control-label"></label>
                <input asp-for="HorarioDaRetirada" class="form-control" />
                <span asp-validation-for="HorarioDaRetirada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
	<a asp-action="Index">Voltar para lista de Requisições</a>
</div>

